<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#46BEF1A4"
    tools:context=".ConvertAmountsActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/convert_amounts"
                android:textColor="@color/white"
                android:textSize="@dimen/action_bar_title_size"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/food_trivia_bg" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageViewScale"
                android:layout_marginTop="50dp"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@drawable/unbalance_scale"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2">
                    <TextView
                        android:paddingVertical="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="Source unit: "/>
                    <Spinner
                        android:id="@+id/spinnerSourceUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edtSourceUnit"
                        android:paddingVertical="10dp"
                        android:paddingRight="10dp"
                        android:gravity="right"
                        android:numeric="decimal"
                        android:text="1"
                        android:textSize="20sp"
                        android:maxLength="15"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>
                </LinearLayout>
                <Button
                    android:layout_marginVertical="20dp"
                    android:id="@+id/btnConvert"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Convert"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="2">
                    <TextView
                        android:paddingVertical="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="Target unit: "/>
                    <Spinner
                        android:id="@+id/spinnerTargetUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvSourceUnit"
                        android:paddingVertical="10dp"
                        android:paddingRight="10dp"
                        android:gravity="right"
                        android:numeric="decimal"
                        android:text="1"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>