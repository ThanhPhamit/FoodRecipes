                android:paddingRight="20dp"
                android:gravity="right"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tasty channel"
                android:textStyle="bold"
                android:textSize="16sp"
